<configuration>
	<system.webServer>
		<handlers>
			<add name="iisnode" path="server.js" verb="*" modules="iisnode" />
		</handlers>
		<iisnode nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;" />
        <rewrite>
            <rules>
                <rule name="hello">
           		<match url="/*" />
           		<action type="Rewrite" url="server.js" />
         	</rule>
            </rules>
        </rewrite>    
  	</system.webServer>
</configuration>